{
  "manifest_version": 3,
  "name": "Edgecase",
  "version": "0.2.0",
  "description": "AI coding interview coach for LeetCode, NeetCode, and HackerRank problem pages.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "https://neetcode.io/*",
    "https://*.neetcode.io/*",
    "https://www.hackerrank.com/*",
    "https://*.hackerrank.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Edgecase",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://neetcode.io/*",
        "https://*.neetcode.io/*",
        "https://www.hackerrank.com/*",
        "https://*.hackerrank.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/contentMain.js",
        "dist/assets/*",
        "dist/pageBridge.js",
        "edgecase-logo-gray.svg"
      ],
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://neetcode.io/*",
        "https://*.neetcode.io/*",
        "https://www.hackerrank.com/*",
        "https://*.hackerrank.com/*"
      ]
    }
  ]
}
